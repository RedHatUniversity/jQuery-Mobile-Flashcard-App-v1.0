<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
    xmlns:gap = "http://phonegap.com/ns/1.0"
    id        = "com.techandbehavior.flashcards"
    version   = "1.0.0">

<name>Flashcard Example</name>

<description>
Flashcard Example
</description>

<author email="hansen.282@osu.edu">
Ryan Hansen
</author>

<preference name="phonegap-version" value="2.1.0" />
<!-- Icons -->
<icon src="images/icon.png" />
<icon src="images/icon.png" width="57" height="57" />
<icon src="images/icon-72.png" gap:platform="ios" width="72" height="72" />
<icon src="images/icon_at_2x.png" width="114" height="114" />
<icon src="images/ldpi-icon.png" gap:platform="android" gap:density="ldpi" />
<icon src="images/mdpi-icon.png" gap:platform="android" gap:density="mdpi" />
<icon src="images/hdpi-icon.png" gap:platform="android" gap:density="hdpi" />
<!-- Splash Screens -->
<gap:splash src="images/Default.png" />
<gap:splash src="images/Default-Landscape.png" width="1024" height="768" />
<gap:splash src="images/Default-Portrait.png" width="768" height="1024" />
<gap:splash src="images/Default.png" width="320" height="480" />
<gap:splash src="images/Default_at_2x.png" width="640" height="960" />
<gap:splash src="images/ldpi.png" gap:platform="android" gap:density="ldpi" />
<gap:splash src="images/mdpi.png" gap:platform="android" gap:density="mdpi" />
<gap:splash src="images/hdpi.png" gap:platform="android" gap:density="hdpi" />

<preference name="permissions" value="none"/>

</widget>